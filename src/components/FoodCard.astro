---

import FoodTag from "./subcomponents/FoodTag.astro";
const {image, title, description, tags} = Astro.props; 

---

<article class="flex flex-col gap-6 ">
	<figure class="w-full">
		<img src=`images/${image}.webp` alt="imagen ilustrativa pizza" class="w-full">
	</figure>
	<div class="flex flex-col gap-2">
		<div class="flex items-center justify-between">
			<h4 class="font-semibold text-base lg:text-xl">{title}</h4>
			<div class="flex gap-2">
				{
					tags.map((tag : string)  => (
						<FoodTag foodType={tag} key={tag}/>
					))
				}
			</div>
		</div>
		<p class="font-base font-[Inter] text-textGray">{description}</p>
	</div>
</article>
